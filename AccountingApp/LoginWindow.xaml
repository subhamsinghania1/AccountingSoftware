<Window x:Class="AccountingApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="#F0F0F0">
        <Border CornerRadius="8" Background="White" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="Sign in" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock Text="Username" FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,5,0,15" Height="30"/>
                <TextBlock Text="Password" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,25" Height="30"/>
                <Button x:Name="LoginButton" Content="Login" Height="35" Background="#007ACC" Foreground="White" Click="LoginButton_Click"/>
                <TextBlock x:Name="StatusTextBlock" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>